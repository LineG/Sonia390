<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/create_tag_layout"
    tools:context="com.fsck.k9.activity.CreateTag">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tag1_name"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name Tag 1"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tag_1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tag 1"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/color_picker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="302dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="110dp">

            <EditText
                android:id="@+id/tag2_name"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name Tag 2"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tag_2"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tag 2"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/color_picker2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="302dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="210dp">

            <EditText
                android:id="@+id/tag3_name"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name Tag 3"
                tools:layout_editor_absoluteX="27dp"
                tools:layout_editor_absoluteY="16dp" />

            <TextView
                android:id="@+id/tag_3"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Tag 3"
                tools:layout_editor_absoluteX="2dp"
                tools:layout_editor_absoluteY="16dp" />

            <Button
                android:id="@+id/color_picker3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="color"
                tools:layout_editor_absoluteX="130dp"
                tools:layout_editor_absoluteY="302dp" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/save_tags"
            android:layout_marginTop="400dp"
            android:layout_centerHorizontal="true"
            android:text="save"/>


    </RelativeLayout>



</android.support.constraint.ConstraintLayout>
